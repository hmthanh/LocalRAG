# LocalRAG Configuration

# Model Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEVICE=cpu
USE_8BIT=false
USE_4BIT=false

# Text Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector Store
VECTOR_STORE_PATH=./data/vector_store

# Document Processing
MAX_DOCUMENTS=
BATCH_SIZE=100

# Toxicity Filtering
ENABLE_TOXICITY_FILTER=true
TOXICITY_THRESHOLD=0.7

# Translation (Google Cloud)
GOOGLE_APPLICATION_CREDENTIALS=
DEFAULT_LANGUAGE=en

# UI Settings
UI_HOST=0.0.0.0
UI_PORT=8501

# Logging
LOG_LEVEL=INFO